<Window x:Class="ZdravoCorp.PatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoCorp"
        mc:Ignorable="d"
        Title="PatientWindow" Height="450" Width="800" Icon="/icon.png" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Grid>
        <Menu>
            <MenuItem Header="Appointment">
                <MenuItem Header="Make" Name="miMake" Click="miMake_Click"></MenuItem>
                <MenuItem Header="My Appointments" Name="MyAppointment" Click="MyAppointments_Click" ></MenuItem>
                <MenuItem Header="Recommending free Appointments" Name="RecommendingAppointment" Click="RecommendingAppointment_Click" ></MenuItem>
            </MenuItem>
            <MenuItem Header="Medical record" Name="MedicalRecord" Click="MedicalRecord_Click"></MenuItem>
            <MenuItem Header="Log out" Name="miLogOut" Click="miLogOut_Click" Margin="730,-20,0,0"/>
        </Menu>
        <Label Name="lblWelcome" Content="" Margin="10,200,0,0" FontSize="25"/>

    </Grid>
</Window>
