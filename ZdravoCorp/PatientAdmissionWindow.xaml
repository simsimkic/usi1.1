<Window x:Class="ZdravoCorp.PatientAdmissionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoCorp"
        mc:Ignorable="d"
        Title="Admission of patients" Height="590" Width="900" WindowStartupLocation="CenterScreen" Icon="/icon.png">
    <Grid Background="#FFFFA7A7">

        <Button x:Name="AddAnamnesis" Content="Add anamnnesis to patient" HorizontalAlignment="Left" Height="40" Margin="92,400,0,0" VerticalAlignment="Top" Width="720" Background="#FFF6D3D3" FontFamily="Trebuchet MS" Click="AddAnamnesis_Click" />
        <DataGrid x:Name="datagrid" ItemsSource="{Binding}" CanUserAddRows="False" HorizontalAlignment="Left" Height="310" Margin="92,60,0,0" VerticalAlignment="Top" Width="720" Background="#FFE6D7D7" AutoGenerateColumns="True" AutomationProperties.IsRowHeader="True"/>

    </Grid>
</Window>
